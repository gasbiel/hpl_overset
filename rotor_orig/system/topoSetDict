actions
(

{
	name blade3Set;
	type cellSet;
	action new;
	source cylinderToCell;
	sourceInfo
	{
		p1 (-500 0 0); // start point on cylinder axis
		p2 (1000 0 0); // end point on cylinder axis
		radius 500;
	}
}

{
	name blade3Zone;
	type cellZoneSet;
	action new;
	source setToCellZone;
	sourceInfo
	{
		set blade3Set;
	}
}

);

